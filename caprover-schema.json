{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "captainVersion": {
            "type": "integer"
        },
        "services": {
            "type": "object",
            "properties": {
                "$$cap_appname": {
                    "type": "object",
                    "properties": {
                        "image": {
                            "type": "string"
                        },
                        "volumes": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "required": [
        "captainVersion",
        "services"
    ]
}